@*@{
    Layout = null;
}*@
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.3.5/angular.min.js"></script>
    <script src="/myApp/app.js"></script>
    <script type="text/javascript" src="/myApp/services/AuthenticationService.js"></script>
    <script type="text/javascript" src="/myApp/Login/LoginController.js"></script>

    
</head>
<body>
    <div ng-app="myApp" ng-controller="LoginController as simpleCtrl">
        <h2>Login</h2>
        <form name="form" ng-submit="simpleCtrl.goLogin()" novalidate>
            <div class="form-group" >
                <label for="username">Username</label>
                <input type="text" name="username" id="username" class="form-control" ng-model="simpleCtrl.username" required />
                <span ng-show="form.username.$touched && form.username.$error.required" class="help-block">Username is required</span>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" name="password" id="password" class="form-control" ng-model="simpleCtrl.password" required />
                <span ng-show="form.password.$touched && form.password.$error.required" class="help-block">Password is required</span>
            </div>
            <div class="form-actions">
                
                <button type="submit" ng-disabled="form.$invalid" class="btn btn-primary">Login</button>
            </div>

        </form>
    </div>
</body>
</html>